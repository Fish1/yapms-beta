{
	"root": true,
	"extends": ["plugin:svelte/recommended", "plugin:svelte/prettier"],
	"rules": {
		"svelte/no-at-html-tags": "off"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"extraFileExtensions": [".svelte"]
	},
	"overrides": [
		{
			"files": ["*.svelte"],
			"parser": "svelte-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser"
			}
		}
	]
}
